#!/usr/bin/env zsh

include 'editor'

function mkcd () { mkdir -p "$1" && cd "$1" }

setopt auto_cd
alias -- -='builtin cd -'
alias up='cd ..'

if ! zgen saved; then
    zgen load b4b4r07/enhancd
fi

# cd into recent dir on tab at beginning of line
function _cd_into_recent_or_expand() {
    if [[ -z $BUFFER ]]; then
        BUFFER="cd "
        zle accept-line
    else
        zle expand-or-complete
    fi
}
zle -N _cd_into_recent_or_expand
bindkey '^I' _cd_into_recent_or_expand


function _go_home() {
	if [[ $BUFFER == 'cd' ]]; then
		BUFFER="cd $HOME"
		zle .accept-line
		return 1
	fi
}
hooks-add-hook zle_accept_line _go_home

